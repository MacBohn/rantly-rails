<h1>Sign up</h1>

<%= form_for @user, url: signup_path do |f|  %>

<div class = "form-group">
<%= f.label :first_name %>
<%= f.text_field :first_name %>
</div>

<div class = "form-group">
<%= f.label :last_name %>
<%= f.text_field :last_name %>
</div>

<div class = "form-group">
<%= f.label :email %>
<%= f.email_field :email %>
</div>


<div class = "form-group">
<%= f.label :password %>
<%= f.password_field :password %>
</div>

<%= f.submit "Sign Up" %>
<% end %>
