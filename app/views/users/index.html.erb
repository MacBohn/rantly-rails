<div class="row">
  <% @users.reverse_each do |user| %>
    <div class="user-tile">
      <div class="avatar", style="background-image: url('<%= user.gravatar_url  %>')">
      </div>
        <%= link_to user.full_name, user_path(user) %><br>
        <span><%= user.email %></span>
    </div>
  <% end %>
</div>
