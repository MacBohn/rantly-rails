<!DOCTYPE html>
<html>
<head>
  <title>RantlyRails</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="header">
    <div class="navbar navbar-default" role="navigation">
      <div class="container">
        <div class="navbar-brand"><%=link_to "Rantly", root_path%></div>
        <div class="navbar-header">
          <%= link_to "Rants", root_path %>
          <%= link_to "Users", users_path %>
          <%= link_to "Sign In", signin_path %>
          <% if current_user %>
          <%= link_to "Sign Out", signout_path, method: :delete %>
          <%= current_user.full_name %>
          <% end %>
          </div>

          </div>

          <div class = "search">
            <%= form_tag search_path, class:"search", :method => 'get' do %>
            <% if params[:search] == "" %>
            <%= text_field_tag :search, params[:search], placeholder: "This can't be blank", class: "search" %>
            <% else %>
            <%= text_field_tag :search, params[:search], placeholder: "Search", class: "search" %>
            <% end %>
            <%= link_to "New Rant", new_rant_path, class: "pull-right btn btn-invert" %>
            <% end %>
            </div>


            </div>
            </div>

            <%=  %>
            <div class="container">
              <%= yield %>
              <%= notice %>
              </div>

              </body>
              </html>
