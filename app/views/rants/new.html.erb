<%  if @rant.errors.any? %>
<% @rant.errors.full_messages.each do |message| %>
<%= message %>
<% end %>
<% end %>
<div class="rant-box">
  <%= form_for @rant do |f| %>
    <div class="rant-head">
      <h2>  <%= f.text_field :title, class: "wide", :placeholder => "Rant Title" %></h2>
      <%= f.submit "Save", class:"body-button fa fa-upload" %>
      <%= link_to "Cancel", root_path, class:"cancel-button fa fa-sign-in" %>
    </div>
   <div class="avatar">
     <br><br><br><br><br><br>
     <span class ="countdown"></span>
   </div>
    <div class="rant-post">
      <div class="form-group">
        <%= f.text_area :body, class: "message col-md-offset-1 col-md-8", :placeholder => "Start ranting" %>
      </div>
  <% end %>
    </div>
</div>
