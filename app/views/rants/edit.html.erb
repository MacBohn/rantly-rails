<h1>Edit Rants</h1>

<%  if @rant.errors.any? %>
<% @rant.errors.full_messages.each do |message| %>
<%= message %>
<%  end %>
<% end %>
<div class="rant-box">
 <%= form_for @rant do |f| %>
  <div class="rant-head">
    <h2><%= f.text_field :title, class: "wide" %></h2>
    <%= link_to "Delete", rant_path(@rant), method: :delete, class: "delete-button fa fa-trash-o" %>
    <%= link_to "Cancel", rants_path, class: "cancel-button fa fa-sign-in" %>
    <%= f.submit "Save", class: "body-button fa fa-upload" %>
  </div>


  <div class="rant-post">
    <div class="avatar">
    </div>
      <%= f.text_area :body, class:"text-area" %>
    </div>
 <% end %>
