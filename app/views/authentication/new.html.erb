<h1>Log In</h1>

<%= form_tag signin_path, html: {class: 'form-horizontal'}  %>
<div class = "form-group">
  <%= label_tag :email %>
  <%= email_field_tag :email %>
</div>

<div class = "form-group">
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <br>
</div>

<div class = "form-group">
  <%= submit_tag "Log In", class: "btn btn-primary" %>
</div>
